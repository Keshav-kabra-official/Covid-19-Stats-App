<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ddd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".StateData">

        <Button
            android:id="@+id/button_state"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="4dp"
            android:background="#FAA3BF"
            android:text="Show State-wise Data" />

        <TextView
            android:id="@+id/text_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_nationality"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="4dp"
            android:background="#96A2F5"
            android:text="Show Nationality-wise Data" />

        <TextView
            android:id="@+id/text_nationality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="14dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_trans_source"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="#FADC8B"
            android:text="Show Transmission-Source Data" />

        <TextView
            android:id="@+id/text_trans_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="15dp"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginRight="4dp"
            android:textColor="#999"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data from 30 Jan, 2020 to 22 Mar, 2020\n(Get latest data with Buttons on previous page ...)"
            android:textSize="10dp"
            android:gravity="right"
            android:layout_gravity="right"/>


    </LinearLayout>
</ScrollView>